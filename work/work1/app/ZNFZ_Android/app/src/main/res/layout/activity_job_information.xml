<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/bg_znfz_normal"
    android:orientation="vertical">

    <include layout="@layout/toobar_view" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/d35"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/d10"
        android:text="@string/publisher_job_information"
        android:textColor="@color/black"
        android:textSize="@dimen/d15" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d45"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_job"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/d15"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/publisher_jobs" />

        <EditText
            android:layout_toRightOf="@+id/tv_job"
            android:id="@+id/ed_job"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/d15"
            android:textColor="@color/text_grey"
            android:gravity="center_vertical"
            android:hint="@string/publisher_please_enter"
            android:layout_marginLeft="@dimen/d15"
            android:background="@null" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Rll_select_commission_rate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d45"
        android:layout_marginTop="@dimen/d2"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/d15"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/publisher_commission_rate" />

        <TextView
            android:layout_marginRight="@dimen/d15"
            android:id="@+id/tv_select_commission_rate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:drawableRight="@mipmap/to_right"
            android:gravity="center"
            android:text="@string/publisher_please_choose" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Rll_select_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d45"
        android:layout_marginTop="@dimen/d2"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/d15"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/publisher_recruitment_number" />


        <TextView
            android:id="@+id/tv_select_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:drawableRight="@mipmap/to_right"
            android:gravity="center"
            android:layout_marginRight="@dimen/d15"
            android:text="@string/publisher_please_choose" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Rll_select_fiend"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d45"
        android:layout_marginTop="@dimen/d2"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/d15"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/publisher_select_friends" />


        <TextView
            android:layout_marginRight="@dimen/d15"
            android:id="@+id/tv_select_fiend"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:drawableRight="@mipmap/to_right"
            android:gravity="center"
            android:text="@string/publisher_please_choose" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d35"
        android:layout_marginTop="@dimen/d2"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/publisher_job_notes" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@null" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone">

        <EditText
            android:id="@+id/ed_job_notes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/d15"
            android:background="@null"
            android:hint="@string/publisher_job_notes_hint"
            android:minHeight="@dimen/d70"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/d14" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_publisher_job_add"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/d10"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="@dimen/d40"
        android:background="@drawable/button_shape_corners_blue"
        android:text="@string/publisher_job_add"
        android:textColor="@color/white" />

</LinearLayout>