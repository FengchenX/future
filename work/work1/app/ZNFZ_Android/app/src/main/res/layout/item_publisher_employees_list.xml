<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="@dimen/d10"
    android:layout_marginLeft="@dimen/d6"
    android:layout_marginRight="@dimen/d6"
    android:layout_height="wrap_content">

    <TextView

        android:id="@+id/publisher_employees_list_item_role"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="@dimen/d14"
        android:textColor="@color/white"
        android:text="@string/user_role_waiter"
        android:background="@drawable/bg_role_cook_text"/>


    <TextView
        android:id="@+id/publisher_employees_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/d16"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/publisher_employees_list_item_role"
        android:layout_marginLeft="@dimen/d15"
        android:text="@string/publisher_employees_username_hint" />

    <TextView
        android:id="@+id/publisher_employees_list_item_per"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/d16"
        android:layout_centerVertical="true"
        android:textColor="@color/gray"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/d15"
        android:text="@string/publisher_employees_userP_per_hint" />

</RelativeLayout>