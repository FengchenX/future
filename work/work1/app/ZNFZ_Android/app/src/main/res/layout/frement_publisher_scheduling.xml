<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_znfz_normal"
    android:layout_marginBottom="@dimen/bottom_navi_bar_height"
    android:orientation="vertical">


    <!--  顶部按钮  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d50"
        android:background="@color/white"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/publisher_btn_scheduling_current"
                android:layout_width="@dimen/d100"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/d7"
                android:text="@string/publisher_home_scheduling_current"
                android:layout_marginBottom="@dimen/d7"
                android:textColor="@color/white"
                android:textSize="@dimen/d16"
                android:layout_marginLeft="@dimen/d10"
                android:background="@drawable/button_shape_corners_blue"/>

            <Button
                android:id="@+id/publisher_btn_scheduling_history"
                android:layout_width="@dimen/d100"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/d7"
                android:layout_toRightOf="@+id/publisher_btn_scheduling_current"
                android:text="@string/publisher_home_scheduling_history"
                android:layout_marginBottom="@dimen/d7"
                android:textColor="@color/black"
                android:textSize="@dimen/d16"
                android:layout_marginLeft="@dimen/d10"
                android:background="@drawable/button_shape_corners_withe"/>

        </RelativeLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:alpha="0.5"
        android:layout_height="0.5dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/d0"
        android:paddingTop="@dimen/d8"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/publisher_listview_scheduling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d0"
            android:layout_marginLeft="@dimen/d10"
            android:layout_marginRight="@dimen/d10"
            android:layout_marginBottom="@dimen/d1"
            android:background="@color/transparent"
            android:dividerHeight="@dimen/d10"
            />

    </RelativeLayout>

    <!--  空数据视图  -->
    <LinearLayout
        android:id="@+id/ll_empty_view"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="@dimen/d80"
            android:layout_height="@dimen/d120"
            android:layout_marginTop="-50dp"
            android:background="@drawable/bg_empty_income"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/d30"
            android:textSize="@dimen/d15"
            android:gravity="center"
            android:layout_marginTop="@dimen/d10"
            android:textColor="@color/alpha_gray"
            android:text="还没有排班"/>


    </LinearLayout>


</LinearLayout>