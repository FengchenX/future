<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/bottom_navi_bar_height"
    android:background="@color/bg_znfz_normal"
    android:orientation="vertical">

    <include layout="@layout/toobar_view" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10000dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/d35"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/d10"
                android:text="@string/publisher_company_information"
                android:textColor="@color/black"
                android:textSize="@dimen/d15" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d45"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/d10"
                    android:gravity="center"
                    android:text="@string/publisher_company_name"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/d14" />

                <EditText
                    android:id="@+id/ed_publisher_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/d14"
                    android:background="@null"
                    android:hint="@string/publisher_please_enter"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/d14" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d45"
                android:layout_marginTop="@dimen/d2"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/d10"
                    android:gravity="center"
                    android:text="@string/publisher_company_account"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/d14" />

                <EditText
                    android:id="@+id/ed_publisher_company_account"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/d14"
                    android:background="@null"
                    android:hint="@string/publisher_please_enter"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/d14" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d45"
                android:layout_marginTop="@dimen/d2"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/d10"
                    android:gravity="center"
                    android:text="@string/publisher_store_name"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/d14" />

                <EditText
                    android:id="@+id/ed_publisher_store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/d14"
                    android:background="@null"
                    android:hint="@string/publisher_please_enter"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/d14" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d45"
                android:layout_marginTop="@dimen/d2"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/d10"
                    android:gravity="center"
                    android:text="@string/publisher_Store_number"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/d14" />

                <EditText
                    android:id="@+id/ed_publisher_store_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/d14"
                    android:background="@null"
                    android:hint="@string/publisher_please_enter"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/d14" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d45"
                android:layout_marginTop="@dimen/d2"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/d10"
                    android:gravity="center"
                    android:text="@string/publisher_company_proportion"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/d14" />

                <TextView
                    android:id="@+id/tv_publisher_company_proportion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/d14"
                    android:background="@null"
                    android:drawableRight="@mipmap/to_right"
                    android:gravity="center_vertical"
                    android:text="@string/publisher_please_select"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/d14" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d45"
                android:layout_marginTop="@dimen/d2"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/d10"
                    android:gravity="center"
                    android:text="@string/publisher_store_proportion"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/d14" />

                <TextView
                    android:id="@+id/tv_publisher_store_proportion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/d14"
                    android:background="@null"
                    android:drawableRight="@mipmap/to_right"
                    android:gravity="center_vertical"
                    android:text="@string/publisher_please_select"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/d14" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/d35"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/d10"
                android:text="@string/publisher_schedule_information"
                android:textColor="@color/black"
                android:textSize="@dimen/d15" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d45"
                android:layout_marginTop="@dimen/d2"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/d10"
                    android:gravity="center"
                    android:text="@string/publisher_working_time"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/d14" />

                <TextView
                    android:id="@+id/tv_publisher_time_start"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/d14"
                    android:background="@null"
                    android:drawableRight="@mipmap/to_right"
                    android:gravity="center_vertical"
                    android:text="@string/publisher_please_select"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/d14" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d45"
                android:layout_marginTop="@dimen/d2"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/d10"
                    android:gravity="center"
                    android:text="@string/publisher_working_off_time"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/d14" />

                <TextView
                    android:id="@+id/tv_publisher_time_end"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/d14"
                    android:background="@null"
                    android:drawableRight="@mipmap/to_right"
                    android:gravity="center_vertical"
                    android:text="@string/publisher_please_select"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/d14" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d45"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/d10"
                    android:gravity="center"
                    android:text="@string/publisher_working_address"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/d14" />

                <EditText
                    android:id="@+id/ed_publisher_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/d14"
                    android:background="@null"
                    android:hint="@string/publisher_please_enter"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/d14" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d45"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/d10"
                    android:gravity="center"
                    android:text="@string/publisher_working_address_detail"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/d14" />

                <EditText
                    android:id="@+id/ed_publisher_address_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/d14"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/publisher_please_enter"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/d14" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/d35"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/d10"
                android:text="@string/publisher_employee_personnel"
                android:textColor="@color/black"
                android:textSize="@dimen/d15" />

            <ListView
                android:id="@+id/lv_add_employee_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_add_employee"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d45"
                android:layout_marginBottom="@dimen/d10"
                android:layout_marginTop="@dimen/d2"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/publisher_add_employee"
                android:textColor="@color/lrv_indicator" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>