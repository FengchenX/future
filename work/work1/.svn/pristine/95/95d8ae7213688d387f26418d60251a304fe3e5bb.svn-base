<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/d100"
        android:background="@drawable/bg_income_head"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d50"
        android:background="@color/bg_znfz_normal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/d30"
            android:layout_height="@dimen/d30"
            android:layout_marginLeft="@dimen/d15"
            android:background="@drawable/ic_income"
            />

        <TextView
            android:layout_width="@dimen/d200"
            android:layout_height="wrap_content"
            android:text="@string/publisher_income_detail_title"
            android:textSize="@dimen/d18"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/d15"
            />


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/publisher_income_detail_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d0"
        android:layout_marginLeft="@dimen/d0"
        android:layout_marginRight="@dimen/d0"
        android:layout_marginBottom="@dimen/d60"
        android:background="@color/transparent"
        android:dividerHeight="@dimen/d10"
        />

    <!--  空数据视图  -->
    <LinearLayout
        android:id="@+id/ll_empty_view"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="@dimen/d80"
            android:layout_height="@dimen/d120"
            android:layout_marginTop="-50dp"
            android:background="@drawable/bg_empty_income"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/d30"
            android:textSize="@dimen/d15"
            android:gravity="center"
            android:layout_marginTop="@dimen/d10"
            android:textColor="@color/alpha_gray"
            android:text="暂时没有收入哦，加油!"/>


    </LinearLayout>


</LinearLayout>