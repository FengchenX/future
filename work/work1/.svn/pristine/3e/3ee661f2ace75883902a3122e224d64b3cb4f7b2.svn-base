<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/bg_znfz_normal">

    <include layout="@layout/toobar_view"></include>

    <ScrollView
        android:layout_below="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/publish_add_scheduling_tv_scheduleinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d15"
                android:layout_marginTop="@dimen/d15"
                android:textSize="@dimen/d15"
                android:text="@string/publisher_add_scheduling_scheduleinfo_text"/>

            <LinearLayout
                android:id="@+id/publish_add_scheduling_ll_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d10"
                android:layout_below="@+id/publish_add_scheduling_tv_scheduleinfo"
                android:background="@color/white"
                android:orientation="vertical">

                <!-- 公司 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d15"
                    android:layout_marginLeft="@dimen/d15"
                    android:layout_marginRight="@dimen/d15"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/d20"
                        android:layout_height="@dimen/d20"
                        android:background="@drawable/ic_role_two"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/d10"
                        android:textSize="@dimen/d15"
                        android:text="@string/publisher_add_scheduling_rolecompany_text"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d45"
                    android:layout_marginTop="@dimen/d15"
                    android:layout_marginLeft="@dimen/d15"
                    android:layout_marginRight="@dimen/d15"
                    android:layout_marginBottom="@dimen/d15"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@drawable/bg_rectangular_frame"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/publish_add_scheduling_et_company"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d45"
                        android:paddingLeft="@dimen/d10"
                        android:gravity="left|center"
                        android:textColor="@color/black"
                        android:enabled="false"
                        android:background="@color/transparent"
                        android:hint="@string/publisher_add_scheduling_rolecompany_hint"
                        android:textSize="@dimen/d15"/>

                </RelativeLayout>

                <!-- 上班时间 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d10"
                    android:layout_marginLeft="@dimen/d15"
                    android:layout_marginRight="@dimen/d15"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/d20"
                        android:layout_height="@dimen/d20"
                        android:background="@drawable/ic_time"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/d10"
                        android:textSize="@dimen/d15"
                        android:text="@string/publisher_add_scheduling_time_text"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d45"
                    android:layout_marginTop="@dimen/d15"
                    android:layout_marginLeft="@dimen/d15"
                    android:layout_marginRight="@dimen/d15"
                    android:layout_marginBottom="@dimen/d15"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@drawable/bg_rectangular_frame"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/publish_add_scheduling_et_time"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d45"
                        android:paddingLeft="@dimen/d10"
                        android:gravity="left|center"
                        android:enabled="false"
                        android:textColor="@color/black"
                        android:background="@color/transparent"
                        android:hint="@string/publisher_add_scheduling_time_hint"
                        android:textSize="@dimen/d15"
                        android:layout_toLeftOf="@+id/publish_add_scheduling_iv_timeselect"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/d10"
                        android:layout_marginBottom="@dimen/d10"
                        android:background="@color/gray"
                        android:layout_toLeftOf="@+id/publish_add_scheduling_iv_timeselect"/>

                    <ImageView
                        android:id="@+id/publish_add_scheduling_iv_timeselect"
                        android:layout_width="@dimen/d40"
                        android:layout_height="match_parent"
                        android:padding="@dimen/d10"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_choice_down"/>
                </RelativeLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/publish_add_scheduling_tv_roleinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d15"
                android:layout_marginTop="@dimen/d20"
                android:layout_below="@+id/publish_add_scheduling_ll_info"
                android:textSize="@dimen/d15"
                android:text="@string/publisher_add_scheduling_roleinfo_text"/>

            <android.support.v7.widget.RecyclerView
            android:id="@+id/publisher_add_scheduling_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d5"
            android:layout_marginLeft="@dimen/d10"
            android:layout_marginRight="@dimen/d10"
            android:layout_marginBottom="@dimen/d20"
            android:background="@color/transparent"
            android:layout_below="@+id/publish_add_scheduling_tv_roleinfo"
            android:dividerHeight="@dimen/d10"
            />


        </RelativeLayout>

    </ScrollView>
</RelativeLayout>