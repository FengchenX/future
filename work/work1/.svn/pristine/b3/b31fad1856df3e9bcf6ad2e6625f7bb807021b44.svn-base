<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d35"
    android:orientation="horizontal"
    android:background="@color/white">


    <TextView
        android:id="@+id/order_role_list_item_dish"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/publish_order_item_left_right_marging"
        android:layout_weight="1"
        android:gravity="center"
        android:text="糖醋排骨"
        android:textSize="@dimen/d15" />

    <TextView
        android:id="@+id/order_role_list_item_num"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="*1"
        android:textSize="@dimen/d15"/>

    <TextView
        android:id="@+id/order_role_list_item_per"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/d15" />

    <TextView
        android:id="@+id/order_role_list_item_money"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/publish_order_item_left_right_marging"
        android:layout_weight="1"
        android:gravity="center"
        android:text="120.00"
        android:textSize="@dimen/d15" />

</LinearLayout>