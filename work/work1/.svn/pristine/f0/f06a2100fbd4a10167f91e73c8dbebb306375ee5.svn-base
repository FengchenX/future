<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/bg_znfz_normal">


    <LinearLayout
        android:id="@+id/ll_right"
        android:layout_width="@dimen/d40"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d0"
        android:layout_marginLeft="@dimen/d0"
        android:layout_marginRight="@dimen/d0"
        android:layout_marginBottom="@dimen/d0"
        android:background="@color/transparent"
        android:dividerHeight="@dimen/d10"
        android:layout_toLeftOf="@+id/ll_right"
        />



</RelativeLayout>