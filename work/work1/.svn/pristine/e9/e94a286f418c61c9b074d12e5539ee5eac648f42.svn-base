<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/create_user_ll_content"
        android:layout_marginTop="@dimen/d50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d50"
        android:layout_marginRight="@dimen/d50"
        android:gravity="center"
        android:layout_above="@+id/create_user_tv_hint"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/d5"
        android:orientation="vertical">
        
        <ImageView
            android:layout_marginTop="@dimen/d50"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_login_head"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d10"
            android:text="@string/createuser_page_companyname"
            android:gravity="center"
            android:textSize="@dimen/d25"
            android:textColor="@color/gray"/>

    </LinearLayout>


    <TextView
        android:id="@+id/create_user_tv_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d20"
        android:text="@string/createuser_page_createhint"
        android:gravity="center"
        android:textSize="@dimen/d15"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/status_blue"/>


    <ImageView
        android:id="@+id/create_user_iv_arrow_down"
        android:layout_width="@dimen/d15"
        android:layout_height="@dimen/d8"
        android:layout_marginTop="@dimen/d20"
        android:gravity="center"
        android:layout_below="@+id/create_user_tv_hint"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_arrow_down_blue"/>

    <TextView
        android:id="@+id/create_user_tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d20"
        android:layout_marginLeft="@dimen/d80"
        android:layout_marginRight="@dimen/d80"
        android:text="sxedcfvgbhnjrvgbyhnjfrtgyhujgtydfbhubfvgbhnjrvggyhujvgbhnjrvggyhujgtydfbhubfvgbhnjrvgbyhnjbyhnjfrtgyhujgtydfbhubfueifienfueifienfer"
        android:gravity="center"
        android:textSize="@dimen/d15"
        android:layout_below="@+id/create_user_iv_arrow_down"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:textColor="@color/status_blue"/>


    <Button
        android:id="@+id/create_user_btn_create"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/d20"
        android:layout_below="@+id/create_user_tv_address"
        android:text="@string/createuser_page_btn_text"
        android:textColor="@color/white"
        android:background="@drawable/button_shape_corners_blue"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp" />


</RelativeLayout>