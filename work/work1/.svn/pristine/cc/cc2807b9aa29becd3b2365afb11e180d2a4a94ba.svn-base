<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/publisher_order_scheduling_list_item_rl_content"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <!-- 第一部分：排班时间 -->
    <RelativeLayout
        android:id="@+id/publisher_order_scheduling_list_item_rl_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/publish_order_item_left_right_marging"
        android:paddingRight="@dimen/publish_order_item_left_right_marging"
        android:paddingTop="@dimen/d10"
        android:paddingBottom="@dimen/d10"
        >

        <ImageView
            android:id="@+id/publisher_order_scheduling_list_item_iv"
            android:layout_width="@dimen/d30"
            android:layout_height="@dimen/d30"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_company_default"/>

        <TextView
            android:id="@+id/publisher_order_scheduling_tv_item_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d12"
            android:textColor="@color/black"
            android:textSize="@dimen/d18"
            android:layout_toRightOf="@+id/publisher_order_scheduling_list_item_iv"
            android:text="@string/publisher_add_scheduling_rolecompany_text"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/publisher_order_scheduling_tv_item_time"
            android:layout_width="@dimen/d10"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/d15"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_arrow_right"/>


    </RelativeLayout>

</RelativeLayout>