<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/publisher_scheduling_role_list_item_ll_cook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/publisher_scheduling_role_list_item_rolename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="@dimen/d15"
            android:text="@string/user_role_cook"/>

        <TextView
            android:id="@+id/publisher_scheduling_role_list_item_rolenum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/d15"
            android:text="2人"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/publisher_scheduling_role_list_item_rolenum_remaining"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/d15"
            android:text="2人"/>

        <TextView
            android:id="@+id/publisher_scheduling_role_list_item_roleper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="@dimen/publish_scheduling_item_left_right_marging"
            android:textSize="@dimen/d15"
            android:text="40%"/>

    </LinearLayout>


</RelativeLayout>